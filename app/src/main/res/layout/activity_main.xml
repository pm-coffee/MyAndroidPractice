<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	
	
	<data>
		
		<variable
			name="viewModel"
			type="com.github.pmcoffee.myandroidpractice.contents.MainViewModel"
			/>
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

		<com.google.android.material.button.MaterialButton
			android:id="@+id/viewpager2_and_room_button"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:text="ViewPager2 and Room"
			android:textAllCaps="false"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>

		<com.google.android.material.button.MaterialButton
				android:id="@+id/viewpager2_with_fragment_button"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:text="ViewPager2 With Fragment"
				android:textAllCaps="false"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/viewpager2_and_room_button"
		/>

		<com.google.android.material.button.MaterialButton
				android:id="@+id/hoge_button"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:text="hoge"
				android:textAllCaps="false"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/viewpager2_with_fragment_button"
		/>
	
	
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>